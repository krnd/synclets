{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "secondary_prompt": {
    "foreground": "#E6E6E6",
    "template": "\u276f "
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "powerline",
          "background": "#68217A",
          "foreground": "#E6E6E6",
          "powerline_symbol": "\ue0bc",
          "template": " {{ if .SSHSession }}\uf817{{ end }}{{ .UserName }} ",
          "properties": {
            "display_host": false,
            "display_user": true
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "background": "#007ACC",
          "foreground": "#E6E6E6",
          "powerline_symbol": "\ue0bc",
          "template": " {{ .Path }} ",
          "properties": {
            "style": "agnoster_short",
            "folder_separator_icon": " \ue0bb ",
            "max_depth": 3,
            "mapped_locations": {
              "~/Projects": "\uf0b1"
            }
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#1A1A1A",
          "background": "#333333",
          "background_templates": [
            "{{ if (or .Working.Changed .Staging.Changed) }}#E29031{{ end }}",
            "{{ if (gt .Behind 0) }}#E45454{{ end }}",
            "{{ if (eq .Behind 0) }}#0A703E{{ end }}"
          ],
          "powerline_symbol": "\ue0bc",
          "templates": [
            " {{ .UpstreamIcon }}{{ .BranchStatus }} ",
            "{{ if .Working.Changed }}\uf044 {{ .Working.String }} {{ end }}",
            "{{ if (and .Working.Changed .Staging.Changed) }}| {{ end }}",
            "{{ if .Staging.Changed }}\uf046 {{ .Staging.String }} {{ end }}",
            "{{ if (gt .StashCount 0) }}| \ueb4b {{ .StashCount }} {{ end }}"
          ],
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "fetch_worktree_count": true,
            "fetch_stash_count": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "python",
          "style": "diamond",
          "background": "#333333",
          "foreground": "#666666",
          "foreground_templates": [
            "{{ if .Error }}#B22222{{ end }}",
            "{{ if .Full }}#E6E6E6{{ end }}"
          ],
          "leading_diamond": "\ue0ba",
          "trailing_diamond": "\ue0bc",
          "template": " \ue235{{ if .Error }} {{ .Error }}{{ end }} ",
          "properties": {
            "display_default": true,
            "display_error": true,
            "display_mode": "context",
            "fetch_version": true,
            "fetch_virtual_env": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#E6E6E6",
          "template": "\u276f"
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "segments": [
        {
          "type": "root",
          "style": "diamond",
          "background": "#E45454",
          "foreground": "#E6E6E6",
          "leading_diamond": "\ue0ba",
          "trailing_diamond": "\ue0bc",
          "template": " \uf0e7 "
        }
      ]
    }
  ]
}